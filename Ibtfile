docker-image: ibt/debian-gcc-python

forwarded-ports:
- 8080:8080

aliases:
  cmake: run 'cd /ibt && if [ ! -d build ]; then mkdir build; fi && cd build && cmake ..'
  make: run 'cd /ibt/build && make'
  debug: shell /bin/sh -c 'cd /ibt/build && gdb ./hello-world'
  exec: run 'cd /ibt/build && ./hello-world'
