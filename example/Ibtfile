docker-image: ibt/debian-gcc-python

forwarded-ports:
- 8080:8080

aliases:
  cmake: run 'cd /example && mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug ..'
  make: run 'cd /example/build && make'
  debug: shell /bin/sh -c 'cd /example/build && gdb ./hello-world'
  exec: run 'cd /example/build && ./hello-world'
